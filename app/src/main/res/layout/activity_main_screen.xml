<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_weight="0.01"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:text="My Android Project"
        android:layout_marginLeft="100pt" />

    <TextView
        android:text="Final Semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:layout_weight="0.01"
        android:layout_marginLeft="110pt" />

    <Button
        android:text="Calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calcButton"
        android:layout_weight="0.01"
        android:onClick="calculator"/>

    <Button
        android:text="Quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_weight="0.01"
        android:onClick="quiz"/>

    <Button
        android:text="Paint Brush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_weight="0.01"
        android:onClick="paintBrush"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11" />
</LinearLayout>